    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--activity-->
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--chap01-->
        <activity android:name=".chapter01.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 手机防盗 -->
        <activity
            android:name=".chapter02.LostFindActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".chapter02.SetUp1Activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".chapter02.SetUp2Activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".chapter02.SetUp3Activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".chapter02.SetUp4Activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".chapter02.ContactSelectActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!---->
        <activity android:name=".chapter04.AppManagerActivity">
        </activity>

        <!--receiver-->
        <!--chap02-->
        <receiver android:name=".chapter02.receiver.SmsLostFindReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".chapter02.receiver.BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <!-- 设备超级管理员广播接收者 -->
        <receiver android:name=".chapter02.receiver.MyDeviceAdminReceiver"
            android:description="@string/sample_device_admin_description"
            android:label="@string/sample_device_admin"
            android:permission="android.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_sample"/>
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>
        </receiver>


        <!--service-->
        <!--chap02-->
        <service android:name=".chapter02.service.GPSLocationService"
            android:permission="true">
        </service>
    </application>

</manifest>